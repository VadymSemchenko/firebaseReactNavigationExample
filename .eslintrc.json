{
  "extends": ["airbnb", "prettier"],
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "globals": {
    "__DEV__": false
  },
  "rules": {
    "global-require": "off",
    "prettier/prettier": ["error"],
    "react/prefer-stateless-function": false,
    "import/no-extraneous-dependencies": false,
    "react/no-unused-prop-types": false,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ]
  }
}
